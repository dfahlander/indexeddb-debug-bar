{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "src/build/core.ts",
    "src/build/react.tsx",
    "src/build/vue/Component.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
